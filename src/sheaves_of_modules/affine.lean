{ pred := Œª U f, M.is_fraction f,
  res := by { rintro V U i f ‚ü®r, s, w‚ü©, exact ‚ü®r, s, Œª x, w (i x)‚ü© } }

def is_locally_fraction : local_predicate (M.localizations) :=
(M.is_fraction_prelocal).sheafify

